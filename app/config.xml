    <!-- Define app icon for each platform. -->
    <icon src="images/touch-icon-iphone.png" />
    <icon src="images/touch-icon-iphone.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="images/touch-icon-iphone.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="images/touch-icon-iphone.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="images/touch-icon-iphone.png"         gap:platform="ios"        width="144" height="144" />
    
        <icon src="images/touch-icon-iphone.png"            gap:platform="android"        width="57" height="57" />
    <icon src="images/touch-icon-iphone.png"            gap:platform="android"        width="72" height="72" />
    <icon src="images/touch-icon-iphone.png"         gap:platform="android"        width="114" height="114" />
    <icon src="images/touch-icon-iphone.png"         gap:platform="android"        width="144" height="144" />

    <!-- Define app splash screen for each platform. -->

    <gap:splash src="images/apple-touch-startup-image-320x460.png"         gap:platform="ios"     width="320" height="480" />
    <gap:splash src="images/apple-touch-startup-image-640x920.png"      gap:platform="ios"     width="640" height="960" />
