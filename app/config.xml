    <gap:splash src="images/apple-touch-startup-image-748x1024.png"           gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="images/apple-touch-startup-image-2048x1496.png"          gap:platform="ios"     width="1024" height="768" />
    
        <gap:splash src="images/apple-touch-startup-image-320x460.png"         gap:platform="android"     width="320" height="480" />
    <gap:splash src="images/apple-touch-startup-image-640x920.png"      gap:platform="android"     width="640" height="960" />
    <gap:splash src="images/apple-touch-startup-image-768x1004.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="images/apple-touch-startup-image-748x1024.png"           gap:platform="android"     width="768" height="1024" />
    <gap:splash src="images/apple-touch-startup-image-2048x1496.png"          gap:platform="android"     width="1024" height="768" />
    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
    <string>100</string>
    </gap:config-file>
     

    <!--
        Define access to external domains.
        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.
        Otherwise, you can specify specific domains:
    -->
    <access origin="*"/>
   
    <!--
        <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
        <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
        <access origin="http://phonegap.com" browserOnly="true" /> - only allows http://phonegap.com to be opened by the child browser.
    -->

</widget>